@model TownOfStettler.Models.Output

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Output</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Type" />
            <div class="form-group">
                <label asp-for="Type" class="control-label">Type:</label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="VideoCardId" class="control-label">Video Card ID:</label>
                <select asp-for="VideoCardId" class="form-control" asp-items="ViewBag.VideoCardId"></select>
                <span asp-validation-for="VideoCardId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfOutputs" class="control-label">Number Of Inputs</label>
                <input asp-for="NumberOfOutputs" class="form-control" />
                <span asp-validation-for="NumberOfOutputs" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notes" class="control-label">Notes:</label>
                <input asp-for="Notes" class="form-control" />
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
