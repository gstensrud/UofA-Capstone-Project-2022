@model TownOfStettler.Models.Warranty

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Warranty</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="DeviceId" class="control-label">Device ID:</label>
                <select asp-for="DeviceId" class="form-control" asp-items="ViewBag.DeviceId"></select>
                <span asp-validation-for="DeviceId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypeOfWarranty" class="control-label">Type Of Warranty:</label>
                <input asp-for="TypeOfWarranty" class="form-control" />
                <span asp-validation-for="TypeOfWarranty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LengthOfWarranty" class="control-label">Length Of Warranty:</label>
                <input asp-for="LengthOfWarranty" class="form-control" />
                <span asp-validation-for="LengthOfWarranty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WarrantyExpiryDate" class="control-label">Warranty Expiry Date:</label>
                <input asp-for="WarrantyExpiryDate" class="form-control" />
                <span asp-validation-for="WarrantyExpiryDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notes" class="control-label">Notes:</label>
                <input asp-for="Notes" class="form-control" />
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
