@using TownOfStettler.Models.Exceptions

@{
    ViewData["Title"] = "New Miscellaneous Hardware Device Entry";
}
<h1> Add A New Hardware Miscellaneous Device to the Database</h1>
<h4>New Miscellaneous Hardware Device from Invoice</h4>
<hr />

@if (ViewData["Exceptions"] != null)
{
    <ul>
        @foreach (Exception sub in (ViewData["Exceptions"] as ValidationException).SubExceptions)
        {
            <li>@sub.Message</li>
        }
    </ul>
}

